{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "..",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noImplicitAny": false,
    "noEmit": true,
    "paths": {
      "@texas-agent/shared": ["../shared/src"],
      "@texas-agent/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*", "../shared/src/**/*"]
}
